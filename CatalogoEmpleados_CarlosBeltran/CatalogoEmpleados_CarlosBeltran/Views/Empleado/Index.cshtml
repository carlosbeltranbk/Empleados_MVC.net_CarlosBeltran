@model List<CatalogoEmpleados_CarlosBeltran.Models.ViewModels.ListEmpleadoViewModel>
@{
    ViewBag.Title = "Datos Empleado";
}
<script>
    function confirmar() {
        if (confirm("¿Estas seguro de eliminar el registro?")) {
            document.getElementById("del").value = "si";
        } else {
            document.getElementById("del").value = "no";
        }
    }
</script>

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Empleado/NuevoEmpleado" class="btn btn-primary">Agregar Empleado</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre del Empleado</th>
                    <th scope="col">Apellido Paterno</th>
                    <th scope="col">Apellido Materno</th>
                    <th scope="col">Fechha de Nacimiento</th>
                    <th scope="col">Sueldo</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var oElemento in Model)
                {
                <tr>
                    <td scope="row">@oElemento.IdEmpleado</td>
                    <td scope="row">@oElemento.Nombre</td>
                    <td scope="row">@oElemento.Apellido1</td>
                    <td scope="row">@oElemento.Apellido2</td>
                    <td scope="row">@oElemento.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                    <td scope="row">@oElemento.Sueldo</td>
                    <td scope="row">@oElemento.Departamento</td>
                    <td scope="row">
                        <a class="btn btn-warning" href="~/Empleado/Editar/@oElemento.IdEmpleado">Editar</a>
                        <a class="btn btn-danger" href="~/Empleado/Eliminar/@oElemento.IdEmpleado">Eliminar</a>

                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>